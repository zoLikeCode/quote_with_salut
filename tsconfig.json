{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],           // ✅ нужна поддержка DOM
    "jsx": "react-jsx",                 // ✅ важно для React 17+
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
